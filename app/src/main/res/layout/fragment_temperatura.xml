<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabs.temperatura">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        tools:ignore="UselessParent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- PANEL DE INFORMACION -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/temperatura"
                        tools:ignore="RelativeOverlap"/>

                    <TextView
                        android:id="@+id/temperaturaActual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="18sp"
                        tools:ignore="RelativeOverlap" />

                    <Switch
                        android:id="@+id/temperaturaswi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            <!-- TEMPERATURA INICIAL-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/temperaturaini"
                            android:textSize="13sp"
                            android:layout_marginTop="15sp"/>

                        <TextView
                            android:id="@+id/tempinicial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50sp"
                            android:layout_marginStart="50sp"
                            android:gravity="center_vertical"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tempinicialbtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/temperaturaon"
                        android:contentDescription="@string/temperaturaini"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            <!-- TEMPERATURA FINAL  -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/temperaturafin"
                            android:textSize="13sp"
                            android:layout_marginTop="15sp"/>

                        <TextView
                            android:id="@+id/tempfinal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50sp"
                            android:layout_marginStart="50sp"
                            android:gravity="center_vertical"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"/>


                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tempfinalbtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/temperaturaoff"
                        android:contentDescription="@string/temperaturafin"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            <!-- TIEMPO ENCENDIDO -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inR"
                            android:textSize="13sp"
                            android:layout_marginTop="15sp"/>

                        <TextView
                            android:id="@+id/tempontime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50sp"
                            android:layout_marginStart="50sp"
                            android:gravity="center_vertical"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ontimebtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/on"
                        android:contentDescription="@string/inR"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            <!-- TIEMPO DE APAGADO-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fiR"
                            android:textSize="13sp"
                            android:layout_marginTop="15sp"/>

                        <TextView
                            android:id="@+id/tempoftime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50sp"
                            android:layout_marginStart="50sp"
                            android:gravity="center_vertical"
                            android:textSize="17sp"
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/oftimebtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/off"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/fiR"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"/>

                </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

            <!-- BARRA DE PROGRESO-->

    </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>